executable hlearn-allknn
    main-is:            Main.hs
    hs-source-dirs:     executables/hlearn-allknn

    ghc-options:
        -threaded
        -rtsopts

        -funbox-strict-fields
        -fexcess-precision

--         -prof -osuf p_o -hisuf p_hi

        -fllvm
        -optlo-O3
        -optlo-enable-no-infs-fp-math
        -optlo-enable-no-nans-fp-math
        -optlo-enable-unsafe-fp-math

